<%= render 'layouts/user_top' %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>End date</th>
      <th>Priority</th>
      <th>Statut</th>
      <th>labels</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task.each do |task| %>
      <tr>
        <td class="task_row"><%= link_to "#{task.name}", task  %></td>
        <td><%= task.content %></td>
        <td class="date_row"><%= task.end_time %></td>
        <td class="priority_high"><%= task.priority %></td>
        <td><%= task.statut %></td>
        <td><em><% task.labels.each do |label|%>
                <%= label.name%>,
            <% end %></em>
        </td>
        <td><%= link_to '', edit_task_path(task),:class=>"fas fa-pencil-alt" %></td>
      </tr>
    <% end %>
    <td><%= link_to 'add label', new_label_path,:class=>"fas fa-folder-plus" %></td>

  </tbody>
</table>
<%=render 'layouts/footer'%>
