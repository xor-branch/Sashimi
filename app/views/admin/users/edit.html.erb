<%= render 'layouts/user_top' %>
<div class="container">
  <div class="container loggin_form">
    <h2>edit user role</h2>
    <div class="container ">
      <% if @user.errors.any? %>
       <div id="error_explanation">
         <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
         <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
      </div>
      <% end %>
      <div class="container">
       <%= form_with(model: [:admin, @user], local: true) do |f| %>
       <%= f.hidden_field :name,:class=>"form-control",
                              :id=>"exampleInputEmail1" %>
       <%= f.hidden_field :email,
                               :class=>"form-control",
                               :id=>"exampleInputEmail1" %>
       <%= f.label :admin %>
       <%= f.check_box :admin,{}, "true","false" %>
       <br>
       <%= f.hidden_field :password,
                               :class=>"form-control",
                               :id=>"exampleInputPassword1" %>
       <%= f.hidden_field :password_confirmation,
                               :class=>"form-control",
                               :id=>"exampleInputPassword1" %>
      <br>
       <%= f.submit :class=>"btn btn-primary"%>
       <% end %>
       </div>
    </div>
  </div>
</div>
<div class="">
  <p id="loggin_form"> or <span class="badge badge-pill badge-light"><%=link_to "login",new_session_path %></span></p>
</div>
<%=render 'layouts/footer'%>
